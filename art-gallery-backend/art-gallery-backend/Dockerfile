FROM mcr.microsoft.com/dotnet/sdk:8.0-preview AS build-env 
WORKDIR /app
EXPOSE 8080
EXPOSE 443
COPY *.csproj ./
RUN dotnet restore
COPY . ./
RUN dotnet publish -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0-preview AS final-env
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "art-gallery-backend.dll"]
